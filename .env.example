# Model Configuration
MODEL_NAME=xlm-roberta-base
MAX_LENGTH=160
BATCH_SIZE=32
LEARNING_RATE=2e-5
EPOCHS=5
WARMUP_STEPS=100

# Data Paths
DATA_DIR=src/data
RAW_DATA_DIR=src/data/raw
PROCESSED_DATA_DIR=src/data/processed
SAMPLES_DIR=src/data/samples

# Training Configuration
TRAIN_SPLIT=0.8
VAL_SPLIT=0.1
TEST_SPLIT=0.1
RANDOM_SEED=42

# Loss Weights
SENTIMENT_WEIGHT=0.4
AUTHENTICITY_WEIGHT=0.6

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
RATE_LIMIT_PER_MINUTE=60

# Firebase Configuration (Optional)
FIREBASE_CREDENTIALS_PATH=
FIREBASE_PROJECT_ID=
FIREBASE_COLLECTION=feedback_logs

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/social_feedback_ai.log

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Model Export
EXPORT_FORMAT=onnx
MODEL_EXPORT_DIR=models/exported
